{
    "name": "@packagaya/root",
    "version": "0.0.0",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/apps/*",
        "packages/libs/*"
    ],
    "scripts": {
        "commit": "git-cz",
        "cli:dev": "LOG_LEVEL=debug ts-node-dev --rs --dir ./packages/apps/cli --respawn --no-notify --clear ./packages/apps/cli/src/main.ts",
        "generate:guards": "ts-auto-guard"
    },
    "dependencies": {},
    "devDependencies": {
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/git": "^9.0.0",
        "@semantic-release/npm": "^7.0.10",
        "all-contributors-cli": "^6.17.4",
        "commitizen": "^4.2.1",
        "cz-conventional-changelog": "^3.3.0",
        "husky": ">=4",
        "lint-staged": ">=10",
        "prettier": "^2.2.1",
        "semantic-release": "^17.3.7",
        "semantic-release-monorepo": "^7.0.4",
        "ts-auto-guard": "^1.0.0-alpha.14",
        "typescript": "^4.0.3"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog/"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,md,json}": "prettier --write"
    }
}
