{
    "private": true,
    "name": "@packagaya/root",
    "license": "MIT",
    "version": "0.0.0",
    "workspaces": [
        "packages/apps/*",
        "packages/libs/*"
    ],
    "scripts": {
        "cli:dev": "LOG_LEVEL=debug ts-node-dev --rs --dir ./packages/apps/cli --respawn --no-notify --clear ./packages/apps/cli/src/main.ts",
        "clean": "rimraf ./packages/**/tsconfig.tsbuildinfo ./packages/**/dist/",
        "commit": "git-cz",
        "generate:guards": "ts-auto-guard",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog/"
        }
    },
    "dependencies": {},
    "devDependencies": {
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/git": "^9.0.1",
        "@semantic-release/npm": "^7.1.3",
        "@types/jest": "^27.0.1",
        "@types/node": "^16.11.8",
        "all-contributors-cli": "^6.20.0",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "^3.3.0",
        "husky": ">=7",
        "jest": "^26.6.3",
        "lint-staged": ">=11",
        "prettier": "^2.3.2",
        "prettier-package-json": "^2.6.0",
        "rimraf": "^3.0.2",
        "semantic-release": "^17.4.7",
        "semantic-release-monorepo": "^7.0.5",
        "ts-auto-guard": "^1.0.0-alpha.26",
        "ts-jest": "^26.5.6",
        "typescript": "^4.3.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "package.json": [
            "prettier-package-json --tab-width 4 --write",
            "git add"
        ],
        "*.{ts,md,json}": "prettier --write"
    }
}
