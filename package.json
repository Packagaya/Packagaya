{
    "name": "@packagaya/root",
    "version": "0.0.0",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/apps/*",
        "packages/libs/*"
    ],
    "scripts": {
        "commit": "git-cz",
        "cli:dev": "ts-node-dev --rs --dir ./packages/apps/cli --respawn --no-notify --clear --watch ./packages/**/src/**/*.* ./packages/apps/cli/src/main.ts",
        "release": "semantic-release"
    },
    "dependencies": {},
    "devDependencies": {
        "all-contributors-cli": "^6.17.4",
        "commitizen": "^4.2.1",
        "cz-conventional-changelog": "^3.3.0",
        "husky": ">=4",
        "lint-staged": ">=10",
        "prettier": "^2.1.2",
        "semantic-release": "^17.3.0",
        "ts-auto-guard": "^1.0.0-alpha.12",
        "typescript": "^4.0.3"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog/"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,md,json}": "prettier --write"
    }
}
