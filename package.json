{
    "private": true,
    "name": "@packagaya/root",
    "license": "MIT",
    "version": "0.0.0",
    "workspaces": [
        "packages/apps/*",
        "packages/libs/*"
    ],
    "scripts": {
        "cli:dev": "LOG_LEVEL=debug ts-node-dev --rs --dir ./packages/apps/cli --respawn --no-notify --clear ./packages/apps/cli/src/main.ts",
        "commit": "git-cz",
        "generate:guards": "ts-auto-guard"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog/"
        }
    },
    "dependencies": {},
    "devDependencies": {
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/git": "^9.0.0",
        "@semantic-release/npm": "^7.0.10",
        "all-contributors-cli": "^6.20.0",
        "commitizen": "^4.2.3",
        "cz-conventional-changelog": "^3.3.0",
        "husky": ">=5",
        "lint-staged": ">=10",
        "prettier": "^2.2.1",
        "prettier-package-json": "^2.1.3",
        "semantic-release": "^17.3.9",
        "semantic-release-monorepo": "^7.0.4",
        "ts-auto-guard": "^1.0.0-alpha.15",
        "typescript": "^4.2.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "package.json": [
            "prettier-package-json --tab-width 4 --write",
            "git add"
        ],
        "*.{ts,md,json}": "prettier --write"
    }
}
