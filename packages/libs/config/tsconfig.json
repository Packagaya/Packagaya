{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",
        "paths": {
            "@packagaya/definitions/*": ["../definitions/*"]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    },
    "references": [
        {
            "path": "../definitions/tsconfig.json"
        }
    ],
    "include": ["./src/**/*.ts", "./src/**/*.json"]
}
