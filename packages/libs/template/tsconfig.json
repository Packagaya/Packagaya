{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@packagaya/config/*": ["../config/*"],
            "@packagaya/definitions/*": ["../definitions/*"]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "references": [
        {
            "path": "../config/tsconfig.json"
        },
        {
            "path": "../definitions/tsconfig.json"
        }
    ]
}
