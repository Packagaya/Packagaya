{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@packagaya/config/*": ["../config/*"],
            "@packagaya/command/*": ["../command/*"],
            "@packagaya/package/*": ["../package/*"],
            "@packagaya/adapter/*": ["../adapter/*"]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "references": [
        {
            "path": "../config/tsconfig.json"
        },
        {
            "path": "../command/tsconfig.json"
        },
        {
            "path": "../adapter/tsconfig.json"
        },
        {
            "path": "../package/tsconfig.json"
        }
    ]
}
