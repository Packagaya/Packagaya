{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDirs": ["./src/", "../config/"],
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@packagaya/config/*": ["../config/*"]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    }
}
