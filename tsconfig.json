{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "baseUrl": "./",
        "paths": {
            "@packagaya/cli/*": ["./packages/apps/cli/*"],
            "@packagaya/package/*": ["./packages/libs/package/*"]
        },
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
